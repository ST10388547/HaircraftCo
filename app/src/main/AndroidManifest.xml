<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.haircraftco">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".HairCraftCoApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_logo"
        android:roundIcon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HaircraftCo"
        tools:targetApi="31">

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".ServicesActivity" />
        <activity android:name=".BookingActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".CheckoutActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".HairCraftCoApp" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ManageServicesActivity" />
        <activity android:name=".ViewBookingsActivity" />

        <receiver
            android:name=".NotificationsHelper$BookingNotificationReceiver"
            android:exported="false" />
    </application>

</manifest>
